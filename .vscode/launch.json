    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Weather Travel Agent",
            "type": "debugpy",
            "request": "launch",
            "module": "src.weather_travel_agent.main",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEV_MODE": "true"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}